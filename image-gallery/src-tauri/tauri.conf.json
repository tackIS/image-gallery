{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "image-gallery",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Image Gallery Manager",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      },
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": ["*"],
          "permissions": [
            "core:default",
            "core:path:default",
            "core:event:default",
            "core:window:default",
            "core:app:default",
            "core:image:default",
            "core:resources:default",
            "core:menu:default",
            "core:tray:default",
            "core:webview:default",
            "sql:allow-load",
            "sql:allow-execute",
            "sql:allow-close",
            "sql:default",
            "dialog:allow-open",
            "dialog:default",
            "fs:allow-read-dir",
            "fs:allow-read-file",
            "fs:default",
            "fs:allow-read",
            "fs:scope"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
